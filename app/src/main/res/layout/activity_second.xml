<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">


    <TextView
        android:id="@+id/matchCounter"
        android:layout_width="136dp"
        android:layout_height="33dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:text="3/10 matches"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="80dp"
        android:layout_height="33dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="36dp"
        android:text="00:00:00"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintRight_toRightOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="399dp"
        android:layout_height="532dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="30dp"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matchCounter">


        <ImageView
            android:id="@+id/imageView0"
            android:layout_width="133dp"
            android:layout_height="133dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintRight_toLeftOf="@+id/imageView1"
            app:srcCompat="@drawable/question" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="133dp"
            android:layout_height="133dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView4"
            app:layout_constraintRight_toLeftOf="@+id/imageView2"
            app:srcCompat="@drawable/question" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="133dp"
            android:layout_height="133dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            app:srcCompat="@drawable/question" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="133dp"
            android:layout_height="133dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView6"
            app:layout_constraintRight_toLeftOf="@+id/imageVie4"
            app:srcCompat="@drawable/question" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="133dp"
            android:layout_height="133dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView7"
            app:layout_constraintRight_toLeftOf="@+id/imageView5"
            app:srcCompat="@drawable/question" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="133dp"
            android:layout_height="133dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView8"
            app:srcCompat="@drawable/question" />


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="133dp"
            android:layout_height="133dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView9"
            app:layout_constraintRight_toLeftOf="@+id/imageView7"
            app:srcCompat="@drawable/question" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="133dp"
            android:layout_height="133dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView10"
            app:layout_constraintRight_toLeftOf="@+id/imageView8"
            app:srcCompat="@drawable/question" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="133dp"
            android:layout_height="133dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView11"
            app:srcCompat="@drawable/question" />


        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="131dp"
            android:layout_height="138dp"
            app:layout_constraintRight_toLeftOf="@+id/imageView10"
            app:srcCompat="@drawable/question" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="133dp"
            android:layout_height="133dp"

            app:layout_constraintRight_toLeftOf="@+id/imageView11"
            app:srcCompat="@drawable/question" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="135dp"
            android:layout_height="139dp"
            app:srcCompat="@drawable/question" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout >